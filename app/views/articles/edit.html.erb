<h1>Edit article</h1>
<!-- articles_path =  '/articles'-->
<%= form_for :article, url: article_path(@article), method: :put do |f| %>
	<p>
		<!-- Title<br> -->
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<!-- Title<br> -->
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>